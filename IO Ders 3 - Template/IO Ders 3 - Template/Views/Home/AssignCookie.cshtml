
@{
    ViewBag.Title = "Cookie Ata";
}

<div class="row">
    <div class="col-md-12">
        <div class="block">
            <div class="block-heading">
                <div class="main-text h2">
                    Cookie Ata
                </div>
                <div class="block-controls">
                    <span aria-hidden="true" class="icon icon-arrow-down icon-size-medium block-control-collapse"></span>
                </div>
            </div>
            <div class="block-content-outer">
                <div class="block-content-inner">
                    <form action="/Home/AssignCookie" method="post" role="form">
                        <div class="form-group">
                            <label for="exampleInputEmail1">Cookie Adı</label>
                            <input type="text" class="form-control" id="exampleInputEmail1" placeholder="Cookie Giriniz" name="CookieName">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">Tanımı</label>
                            <input type="text" class="form-control" id="exampleInputPassword1" placeholder="Tanımını Giriniz" name="Description">
                        </div>
                        <button type="submit" class="btn btn-primary">Kaydet</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>