
@{
    ViewBag.Title = "Ürün Silme";
}

@using IO_Ders_3___Template.Models
@model Product

<div class="row">
    <div class="col-md-12">
        <div class="block">
            <div class="block-heading">
                <div class="main-text h2">
                    Ürün Silme Sayfası
                    <div class="block-controls">
                        <a href="/Product/Index"><span aria-hidden="true" class="icon icon-cross icon-size-medium block-control-remove"></span></a>
                        <span aria-hidden="true" class="icon icon-arrow-down icon-size-medium block-control-collapse"></span>
                    </div>
                </div>
            </div>
            <div class="block-content-outer">
                <div class="block-content-inner">
                    <form action="/Product/DeleteProduct" method="post">
                         <input type="hidden" name="ProductID" value="@Model.ProductID"/>
                        <label>@Model.ProductName Ürünü Silelim mi ?</label>
                         <input type="submit" name="name" value="Evet" class="btn btn-danger"/>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
