
@{
    ViewBag.Title = "Ürün Ekle";
}

@using IO_Ders_3___Template.Models
@model List<Product>

<div class="row">
    <div class="col-md-12">
        <div class="block">
            <div class="block-heading">
                <div class="main-text h2">
                    Ürünler
                </div>
                <div class="block-controls">
                    <a href="/Product/Index"><span aria-hidden="true" class="icon icon-cross icon-size-medium block-control-remove"></span></a>
                    <span aria-hidden="true" class="icon icon-arrow-down icon-size-medium block-control-collapse"></span>
                </div>
            </div>
            <div class="block-content-outer">
                <div class="block-content-inner">
                    <form action="/Product/AddProduct" method="post" role="form">
                        <div class="form-group">
                            <label for="exampleInputEmail1">Ürün Adı</label>
                            <input type="text" class="form-control" id="exampleInputEmail1" placeholder="Ürün Giriniz" name="ProductName">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">Fiyat</label>
                            <input type="number" class="form-control" id="exampleInputPassword1" placeholder="Fiyatı Giriniz" name="UnitPrice">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">Stok</label>
                            <input type="number" class="form-control" id="exampleInputPassword1" placeholder="Stok Belirleyin" name="UnitsInStock">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">Kategori</label>
                            <input type="text" class="form-control" id="exampleInputPassword1" placeholder="Kategori Giriniz" name="CategoryID">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">Tedarikçi</label>

                            <select class="form-control" name="SupplierID">
                                @foreach (Supplier s in ViewBag.Supplier)
                                {
                                    <option value="@s.SupplierID">@s.CompanyName</option>
                                }
                            </select>
                        </div> 
                        <button type="submit" class="btn btn-primary">Kaydet</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>