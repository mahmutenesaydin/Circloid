
@{
    ViewBag.Title = "Kategori Ekle";
}

<div class="row">
    <div class="col-md-12">
        <div class="block">
            <div class="block-heading">
                <div class="main-text h2">
                    Kategoriler
                </div>
                <div class="block-controls">
                    <a href="/Category/Index"><span aria-hidden="true" class="icon icon-cross icon-size-medium block-control-remove"></span></a>
                    <span aria-hidden="true" class="icon icon-arrow-down icon-size-medium block-control-collapse"></span>
                </div>
            </div>
            <div class="block-content-outer">
                <div class="block-content-inner">
                    <form action="/Category/AddCategory" method="post" role="form">
                        <div class="form-group">
                            <label for="exampleInputEmail1">Kategori Adı</label>
                            <input type="text" class="form-control" id="exampleInputEmail1" placeholder="Kategori Giriniz" name="CategoryName">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">Tanımı</label>
                            <input type="text" class="form-control" id="exampleInputPassword1" placeholder="Tanımını Giriniz" name="Description">
                        </div>
                        <button type="submit" class="btn btn-primary">Kaydet</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>